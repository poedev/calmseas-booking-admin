extends layouts/layout

block vars
  -title = 'Quản lý gói phòng | Calmseas booking admin'
  -bodyClass = 'home'
  -menuIndex = 0

block container
  // Content Wrapper. Contains page content
  .content-wrapper
    // Content Header (Page header)
    section.content-header
      h1
        | Quản lý gói phòng
      ol.breadcrumb
        li
          a(href='#')
            i.fa.fa-archive
            |  Gói phòng
    // Main content
    section.content
      .util-btns
        a.btn.btn-app
          i.fa.fa-plus
          span Thêm gói
      .table-container
        .row
          .col-xs-12
            .box
              .box-header
                h3.box-title Danh sách gói phòng
              // /.box-header
              .box-body
                table#example2.table.table-bordered.table-hover
                  thead
                    tr
                      th Tên gói phòng
                      th Extra
                      th Thuộc tính
                      th Còn lại
                      th Điều chỉnh
                  tbody
                    tr(ng-repeat="i in [1,3,3526,2364343,4,5,25,56,78,90,53,216]")
                      td Trident
                      td
                        | Internet
                        | Explorer 4.0
                      td Win 95+
                      td  4
                      td
                        i.fa.fa-edit
      // Your Page Content Here
    // /.content
  // /.content-wrapper
