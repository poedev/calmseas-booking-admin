    |               | layout-boxed                            |
    |               | layout-top-nav                          |
    |               | sidebar-collapse                        |
    |               | sidebar-mini                            |
    |---------------------------------------------------------|
  body.skin-green.sidebar-mini(ng-app="calm-admin")
      include ../blocks/header
      include ../blocks/sidebar
    .wrapper(style="width: 100%")
      // Main Header
      block container
    include ../blocks/footer
    include ../blocks/control-sidebar
    include ../blocks/script
      block additionscript

